<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adalbertosoares.buddybox">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="buddybox.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="buddybox.ui.PlayingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="buddybox.ui.PlaylistActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="buddybox.ui.EditSongActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <receiver
            android:name="buddybox.ui.notification.NotificationDismissedReceiver"
            android:exported="false" />
        <receiver
            android:name="buddybox.ui.notification.NotificationPlayPauseReceiver"
            android:exported="false" />
        <receiver
            android:name="buddybox.ui.notification.NotificationSkipNextReceiver"
            android:exported="false" />
        <receiver
            android:name="buddybox.ui.notification.NotificationSkipPreviousReceiver"
            android:exported="false" />
        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name="buddybox.io.BluetoothDetectService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="true">
            <intent-filter android:priority="0">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>
        <service
            android:name="buddybox.io.MediaPlaybackService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>
        <service
            android:name="buddybox.io.MediaInfoRetriever"
            android:stopWithTask="true" />

        <activity android:name="buddybox.ui.ArtistActivity"></activity>
    </application>

</manifest>