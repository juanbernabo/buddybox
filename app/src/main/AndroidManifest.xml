<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adalbertosoares.buddybox">

    <application
        android:name="buddybox.BuddyBoxApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlayingActivity"/>

        <receiver
            android:name="com.adalbertosoares.buddybox.NotificationDismissedReceiver"
            android:exported="false" />

        <receiver
            android:name="com.adalbertosoares.buddybox.NotificationPlayPauseReceiver"
            android:exported="false" />
    </application>


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>