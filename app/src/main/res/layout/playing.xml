<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="566dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/playingMinimize">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:padding="10dp"
                android:src="@drawable/ic_expand_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/song_playing"
                android:id="@+id/textView5"
                android:textAlignment="gravity"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.97"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/song"
            android:id="@+id/playingSongName"
            android:layout_alignParentTop="true"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/artist"
            android:id="@+id/playingSongArtist"
            android:layout_below="@+id/playingSongName"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/genre"
            android:id="@+id/playingSongGenre"
            android:layout_below="@+id/playingSongArtist"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/playlistsChips"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/playingSongGenre"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/playingPlayPause"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_circle"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:contentDescription="TODO" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/skipNext"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/playingPlayPause"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next"
            android:scaleType="fitCenter" android:contentDescription="TODO" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/skipPrevious"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_previous"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/playingPlayPause" android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/repeatAll"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/repeatAll"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_shuffle" />

        <ImageButton
            android:id="@+id/repeatAll"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/skipNext"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/skipNext"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_repeat" />

        <ImageButton
            android:id="@+id/repeatSong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/skipPrevious"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_repeat_one" />

    </RelativeLayout>

</LinearLayout>