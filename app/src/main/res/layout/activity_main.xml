<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buddybox.ui.MainActivity"
    android:background="#000000">

    <include layout="@layout/permission_write_external_storage"
        android:id="@+id/permission" />

    <include layout="@layout/navbar"
        android:id="@+id/includeNavbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLibrary"
        android:layout_below="@+id/includeNavbar">

        <include layout="@layout/library_frame" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeNavbar"
        android:id="@+id/frameSampler">

        <include layout="@layout/sampler_frame" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeNavbar"
        android:id="@+id/frameLoved">

        <include layout="@layout/loved_frame" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeNavbar"
        android:id="@+id/frameSharing">

        <include layout="@layout/sharing_frame" />
    </FrameLayout>

    <include layout="@layout/playing_bar" />

</RelativeLayout>