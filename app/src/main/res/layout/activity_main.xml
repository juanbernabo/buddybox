<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buddybox.ui.MainActivity">

    <include layout="@layout/navbar"
        android:id="@+id/includeNavbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeNavbar"
        android:id="@+id/frameLibrary">

        <include layout="@layout/library" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeNavbar"
        android:id="@+id/frameSampler">

        <include layout="@layout/sampler" />
    </FrameLayout>

    <include layout="@layout/playing_bar" />

</RelativeLayout>