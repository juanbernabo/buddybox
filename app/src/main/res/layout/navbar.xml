<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/topBar"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/libraryNavbarBtn"
            android:src="@drawable/ic_library_music"
            android:contentDescription="@string/music_library"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="false" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/lovedNavbarBtn"
            android:src="@drawable/ic_loved"
            android:contentDescription="@string/loved"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/libraryNavbarBtn"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/samplerNavbarBtn"
            android:src="@drawable/ic_whatshot"
            android:contentDescription="Radio"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/lovedNavbarBtn"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/sharingNavbarBtn"
            android:src="@drawable/ic_sharing"
            android:contentDescription="@string/buddies"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/samplerNavbarBtn"
            android:layout_toStartOf="@+id/samplerNavbarBtn"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sharing"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/sharingNavbarBtn"
            android:layout_alignStart="@+id/sharingNavbarBtn"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sampler"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/samplerNavbarBtn"
            android:layout_toStartOf="@+id/lovedNavbarBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Loved"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:layout_alignEnd="@+id/lovedNavbarBtn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/samplerNavbarBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Library"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/libraryNavbarBtn" />

    </RelativeLayout>
</RelativeLayout>