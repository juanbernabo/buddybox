<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/songItem"
    android:paddingLeft="16dp">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:id="@+id/songMore"
        android:src="@drawable/ic_playlist_add"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Add to Playlist"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/songMore">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/songDuration"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/songName"
            android:layout_marginRight="12dp"
            android:visibility="visible"
            app:srcCompat="@mipmap/sneer2" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/picture"
            android:singleLine="true"
            android:text="Item"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView android:id="@+id/songDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songName"
            android:layout_alignStart="@+id/songName"
            android:text="subtitle"
            android:layout_marginBottom="8dp"
            android:singleLine="true" />

    </RelativeLayout>

</RelativeLayout>